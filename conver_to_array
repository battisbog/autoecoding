import pandas as pd
import numpy as np

# create a sample dataframe
data = {'x coordinate': [1, 2, 3, 1, 2, 3],
        'y coordinate': [1, 1, 1, 2, 2, 2],
        'material constant': [10, 20, 30, 40, 50, 60]}
df = pd.DataFrame(data)

# use pivot() method to create 2D array
arr = df.pivot(index='y coordinate', columns='x coordinate', values='material constant').to_numpy()

print(arr)